<% 
    const title = 'Quản lý Nhà cung cấp';
    const currentPage = 'suppliers';
%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0">
                        <i class="fas fa-truck text-primary me-2"></i>
                        Danh sách Nhà cung cấp
                    </h2>
                    <p class="text-muted mb-0">Quản lý thông tin nhà cung cấp trong hệ thống</p>
                </div>
                <a href="/suppliers/create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Thêm mới
                </a>
            </div>

            <!-- Content -->
            <% if (suppliers.length === 0) { %>
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-truck fa-3x text-muted"></i>
                    </div>
                    <h4 class="text-muted">Chưa có nhà cung cấp nào</h4>
                    <p class="text-muted">Bắt đầu bằng cách thêm nhà cung cấp đầu tiên</p>
                    <a href="/suppliers/create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Thêm nhà cung cấp đầu tiên
                    </a>
                </div>
            <% } else { %>
                <!-- Suppliers Table -->
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                        <th><i class="fas fa-building me-1"></i>Tên</th>
                                        <th><i class="fas fa-map-marker-alt me-1"></i>Địa chỉ</th>
                                        <th><i class="fas fa-phone me-1"></i>Điện thoại</th>
                                        <th class="text-center"><i class="fas fa-cogs me-1"></i>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% suppliers.forEach((supplier, index) => { %>
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary fs-6"><%= index + 1 %></span>
                                            </td>
                                            <td class="fw-semibold"><%= supplier.name %></td>
                                            <td>
                                                <% if (supplier.address) { %>
                                                    <span class="text-truncate d-inline-block" style="max-width: 200px;" title="<%= supplier.address %>">
                                                        <i class="fas fa-map-marker-alt text-muted me-1"></i>
                                                        <%= supplier.address %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="text-muted fst-italic">Chưa cập nhật</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (supplier.phone) { %>
                                                    <a href="tel:<%= supplier.phone %>" class="text-decoration-none">
                                                        <i class="fas fa-phone text-success me-1"></i>
                                                        <%= supplier.phone %>
                                                    </a>
                                                <% } else { %>
                                                    <span class="text-muted fst-italic">Chưa cập nhật</span>
                                                <% } %>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="/suppliers/<%= supplier.oid %>" 
                                                       class="btn btn-sm btn-outline-info" 
                                                       title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/suppliers/<%= supplier.oid %>/edit" 
                                                       class="btn btn-sm btn-outline-warning" 
                                                       title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="POST" action="/suppliers/<%= supplier.oid %>?_method=DELETE" 
                                                          style="display:inline;">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-danger" 
                                                                onclick="return confirmDelete('Bạn có chắc muốn xóa nhà cung cấp này?')"
                                                                title="Xóa">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Suppliers Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5 class="card-title">Tổng NCC</h5>
                                        <h3 class="mb-0"><%= suppliers.length %></h3>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-truck fa-2x opacity-75"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>