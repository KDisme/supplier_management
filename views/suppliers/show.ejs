<% 
    const title = 'Chi tiết Nhà cung cấp';
    const currentPage = 'suppliers';
%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a href="/suppliers" class="text-decoration-none">
                                    <i class="fas fa-truck me-1"></i>Nhà cung cấp
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                        </ol>
                    </nav>
                    <h2 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Chi tiết Nhà cung cấp
                    </h2>
                </div>
                <div class="btn-group">
                    <a href="/suppliers/<%= supplier.oid %>/edit" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa
                    </a>
                    <a href="/suppliers" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>

            <!-- Supplier Details -->
            <div class="row">
                <div class="col-lg-8">
                    <!-- Main Information Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-building me-2"></i>Thông tin nhà cung cấp
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">TÊN NHÀ CUNG CẤP</label>
                                        <div class="fs-4 fw-semibold text-dark">
                                            <i class="fas fa-building text-info me-2"></i>
                                            <%= supplier.name %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">MÃ NHÀ CUNG CẤP</label>
                                        <div class="fs-6">
                                            <span class="badge bg-info font-monospace">
                                                #<%= supplier.oid.substring(supplier.oid.length - 8).toUpperCase() %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">ĐỊA CHỈ</label>
                                        <div class="fs-6">
                                            <% if (supplier.address) { %>
                                                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                                <%= supplier.address %>
                                            <% } else { %>
                                                <span class="text-muted fst-italic">Chưa cập nhật</span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">ĐIỆN THOẠI</label>
                                        <div class="fs-6">
                                            <% if (supplier.phone) { %>
                                                <a href="tel:<%= supplier.phone %>" class="text-decoration-none">
                                                    <i class="fas fa-phone text-success me-2"></i>
                                                    <%= supplier.phone %>
                                                </a>
                                            <% } else { %>
                                                <span class="text-muted fst-italic">Chưa cập nhật</span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">NGÀY TẠO</label>
                                        <div class="text-muted">
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= new Date(supplier.createdAt).toLocaleDateString('vi-VN', {
                                                year: 'numeric',
                                                month: 'long', 
                                                day: 'numeric',
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">CẬP NHẬT CUỐI</label>
                                        <div class="text-muted">
                                            <i class="fas fa-clock me-2"></i>
                                            <%= new Date(supplier.updatedAt).toLocaleDateString('vi-VN', {
                                                year: 'numeric',
                                                month: 'long', 
                                                day: 'numeric',
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Products List Card -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-box me-2"></i>Sản phẩm của nhà cung cấp 
                                <span class="badge bg-light text-primary ms-2"><%= products.length %></span>
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <% if (products.length === 0) { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                    <h6 class="text-muted">Chưa có sản phẩm nào</h6>
                                    <p class="text-muted small">Nhà cung cấp này chưa có sản phẩm</p>
                                    <a href="/products/create" class="btn btn-primary btn-sm">
                                        <i class="fas fa-plus me-1"></i>Thêm sản phẩm
                                    </a>
                                </div>
                            <% } else { %>
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th><i class="fas fa-hashtag me-1"></i>STT</th>
                                                <th><i class="fas fa-tag me-1"></i>Tên sản phẩm</th>
                                                <th><i class="fas fa-dollar-sign me-1"></i>Giá</th>
                                                <th><i class="fas fa-cubes me-1"></i>Số lượng</th>
                                                <th class="text-center"><i class="fas fa-cogs me-1"></i>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% products.forEach((product, index) => { %>
                                                <tr>
                                                    <td>
                                                        <span class="badge bg-primary"><%= index + 1 %></span>
                                                    </td>
                                                    <td class="fw-semibold"><%= product.name %></td>
                                                    <td class="text-success fw-bold">
                                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.price) %>
                                                    </td>
                                                    <td>
                                                        <% if (product.quantity > 0) { %>
                                                            <span class="badge bg-success"><%= product.quantity %></span>
                                                        <% } else { %>
                                                            <span class="badge bg-danger">Hết hàng</span>
                                                        <% } %>
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <a href="/products/<%= product.oid %>" 
                                                               class="btn btn-sm btn-outline-info" 
                                                               title="Xem chi tiết">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a href="/products/<%= product.oid %>/edit" 
                                                               class="btn btn-sm btn-outline-warning" 
                                                               title="Chỉnh sửa">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Statistics Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-chart-bar me-2"></i>Thống kê
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6">
                                    <div class="border-end">
                                        <h3 class="text-primary mb-1"><%= products.length %></h3>
                                        <small class="text-muted">Sản phẩm</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h3 class="text-success mb-1">
                                        <%= products.reduce((sum, p) => sum + p.quantity, 0) %>
                                    </h3>
                                    <small class="text-muted">Tổng số lượng</small>
                                </div>
                            </div>
                            
                            <hr>
                            
                            <div class="text-center">
                                <h5 class="text-info mb-1">
                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(
                                        products.reduce((sum, p) => sum + (p.price * p.quantity), 0)
                                    ) %>
                                </h5>
                                <small class="text-muted">Tổng giá trị hàng tồn</small>
                            </div>
                        </div>
                    </div>

                    <!-- Actions Card -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-cogs me-2"></i>Thao tác
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/suppliers/<%= supplier.oid %>/edit" class="btn btn-warning">
                                    <i class="fas fa-edit me-2"></i>Chỉnh sửa nhà cung cấp
                                </a>
                                
                                <form method="POST" action="/suppliers/<%= supplier.oid %>?_method=DELETE" class="d-grid">
                                    <button type="submit" 
                                            class="btn btn-danger"
                                            onclick="return confirmDelete('Bạn có chắc muốn xóa nhà cung cấp này?')">
                                        <i class="fas fa-trash me-2"></i>Xóa nhà cung cấp
                                    </button>
                                </form>
                                
                                <hr>
                                
                                <a href="/suppliers" class="btn btn-outline-secondary">
                                    <i class="fas fa-list me-2"></i>Danh sách nhà cung cấp
                                </a>
                                
                                <a href="/suppliers/create" class="btn btn-outline-info">
                                    <i class="fas fa-plus me-2"></i>Thêm nhà cung cấp mới
                                </a>
                                
                                <a href="/products/create" class="btn btn-outline-primary">
                                    <i class="fas fa-box-open me-2"></i>Thêm sản phẩm mới
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(message) {
    return confirm(message);
}
</script>