<% 
    const title = 'Chi tiết Sản phẩm';
    const currentPage = 'products';
%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a href="/products" class="text-decoration-none">
                                    <i class="fas fa-box me-1"></i>Sản phẩm
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                        </ol>
                    </nav>
                    <h2 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Chi tiết Sản phẩm
                    </h2>
                </div>
                <div class="btn-group">
                    <a href="/products/<%= product.oid %>/edit" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa
                    </a>
                    <a href="/products" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>

            <!-- Product Details -->
            <div class="row">
                <div class="col-lg-8">
                    <!-- Main Information Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info me-2"></i>Thông tin cơ bản
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">TÊN SẢN PHẨM</label>
                                        <div class="fs-5 fw-semibold text-dark">
                                            <i class="fas fa-tag text-primary me-2"></i>
                                            <%= product.name %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">MÃ SẢN PHẨM</label>
                                        <div class="fs-6">
                                            <span class="badge bg-secondary font-monospace">
                                                #<%= product.oid.substring(product.oid.length - 8).toUpperCase() %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">GIÁ BÁN</label>
                                        <div class="fs-4 fw-bold text-success">
                                            <i class="fas fa-dollar-sign me-1"></i>
                                            <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.price) %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">SỐ LƯỢNG TỒN KHO</label>
                                        <div class="fs-5">
                                            <% if (product.quantity > 0) { %>
                                                <span class="badge bg-success fs-6">
                                                    <i class="fas fa-cubes me-1"></i>
                                                    <%= product.quantity %> sản phẩm
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-danger fs-6">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                                    Hết hàng
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">NGÀY TẠO</label>
                                        <div class="text-muted">
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= new Date(product.createdAt).toLocaleDateString('vi-VN', {
                                                year: 'numeric',
                                                month: 'long', 
                                                day: 'numeric',
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted small fw-bold">CẬP NHẬT CUỐI</label>
                                        <div class="text-muted">
                                            <i class="fas fa-clock me-2"></i>
                                            <%= new Date(product.updatedAt).toLocaleDateString('vi-VN', {
                                                year: 'numeric',
                                                month: 'long', 
                                                day: 'numeric',
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Supplier Information Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-truck me-2"></i>Nhà cung cấp
                            </h5>
                        </div>
                        <div class="card-body">
                            <% if (product.supplier) { %>
                                <div class="text-center mb-3">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px;">
                                        <i class="fas fa-building fa-2x text-info"></i>
                                    </div>
                                </div>
                                
                                <div class="text-center mb-3">
                                    <h5 class="fw-bold text-dark mb-1"><%= product.supplier.name %></h5>
                                    <span class="badge bg-info">
                                        #<%= product.supplier.oid.substring(product.supplier.oid.length - 6).toUpperCase() %>
                                    </span>
                                </div>

                                <div class="mb-2">
                                    <strong class="text-muted">
                                        <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ:
                                    </strong>
                                    <div class="ms-4">
                                        <%= product.supplier.address || 'Chưa cập nhật' %>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <strong class="text-muted">
                                        <i class="fas fa-phone me-2"></i>Điện thoại:
                                    </strong>
                                    <div class="ms-4">
                                        <% if (product.supplier.phone) { %>
                                            <a href="tel:<%= product.supplier.phone %>" class="text-decoration-none">
                                                <%= product.supplier.phone %>
                                            </a>
                                        <% } else { %>
                                            Chưa cập nhật
                                        <% } %>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <a href="/suppliers/<%= product.supplier.oid %>" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-eye me-1"></i>Xem chi tiết
                                    </a>
                                </div>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="fas fa-exclamation-circle fa-3x mb-3"></i>
                                    <h6>Chưa có nhà cung cấp</h6>
                                    <p class="small">Sản phẩm này chưa được gán nhà cung cấp</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Actions Card -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-cogs me-2"></i>Thao tác
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/products/<%= product.oid %>/edit" class="btn btn-warning">
                                    <i class="fas fa-edit me-2"></i>Chỉnh sửa sản phẩm
                                </a>
                                
                                <form method="POST" action="/products/<%= product.oid %>?_method=DELETE" class="d-grid">
                                    <button type="submit" 
                                            class="btn btn-danger"
                                            onclick="return confirmDelete('Bạn có chắc muốn xóa sản phẩm này?')">
                                        <i class="fas fa-trash me-2"></i>Xóa sản phẩm
                                    </button>
                                </form>
                                
                                <hr>
                                
                                <a href="/products" class="btn btn-outline-secondary">
                                    <i class="fas fa-list me-2"></i>Danh sách sản phẩm
                                </a>
                                
                                <a href="/products/create" class="btn btn-outline-primary">
                                    <i class="fas fa-plus me-2"></i>Thêm sản phẩm mới
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(message) {
    return confirm(message);
}
</script>