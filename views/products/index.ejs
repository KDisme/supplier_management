<% 
    const title = 'Quản lý Sản phẩm';
    const currentPage = 'products';
%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0">
                        <i class="fas fa-box text-primary me-2"></i>
                        Danh sách Sản phẩm
                    </h2>
                    <p class="text-muted mb-0">Quản lý thông tin sản phẩm trong hệ thống</p>
                </div>
                <a href="/products/create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Thêm mới
                </a>
            </div>

            <!-- Content -->
            <% if (products.length === 0) { %>
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-box-open fa-3x text-muted"></i>
                    </div>
                    <h4 class="text-muted">Chưa có sản phẩm nào</h4>
                    <p class="text-muted">Bắt đầu bằng cách thêm sản phẩm đầu tiên</p>
                    <a href="/products/create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Thêm sản phẩm đầu tiên
                    </a>
                </div>
            <% } else { %>
                <!-- Products Table -->
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                        <th><i class="fas fa-tag me-1"></i>Tên sản phẩm</th>
                                        <th><i class="fas fa-dollar-sign me-1"></i>Giá</th>
                                        <th><i class="fas fa-cubes me-1"></i>Số lượng</th>
                                        <th><i class="fas fa-truck me-1"></i>Nhà cung cấp</th>
                                        <th class="text-center"><i class="fas fa-cogs me-1"></i>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach((product, index) => { %>
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary fs-6"><%= index + 1 %></span>
                                            </td>
                                            <td class="fw-semibold"><%= product.name %></td>
                                            <td class="text-success fw-bold">
                                                <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.price) %>
                                            </td>
                                            <td>
                                                <% if (product.quantity > 0) { %>
                                                    <span class="badge bg-success fs-6"><%= product.quantity %> sản phẩm</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger fs-6">Hết hàng</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (product.supplier) { %>
                                                    <span class="badge bg-info"><%= product.supplier.name %></span>
                                                <% } else { %>
                                                    <span class="badge bg-warning">Chưa chọn</span>
                                                <% } %>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="/products/<%= product.oid %>" 
                                                       class="btn btn-sm btn-outline-info" 
                                                       title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/products/<%= product.oid %>/edit" 
                                                       class="btn btn-sm btn-outline-warning" 
                                                       title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="POST" action="/products/<%= product.oid %>?_method=DELETE" 
                                                          style="display:inline;">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-danger" 
                                                                onclick="return confirmDelete('Bạn có chắc muốn xóa sản phẩm này?')"
                                                                title="Xóa">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Products Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5 class="card-title">Tổng sản phẩm</h5>
                                        <h3 class="mb-0"><%= products.length %></h3>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-box fa-2x opacity-75"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>